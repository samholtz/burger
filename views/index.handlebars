<h1>Burgers</h1>

<div class="big-div">

    <div class="uneaten">
        <h3>Uneaten burgers:</h3>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                <p>ID: {{this.id}}</p>
                <p>Burger Name: {{this.burger_name}}</p>
                <form action="/burgers/{{this.id}}" method="POST">
                    <button data-burgerid="{{this.id}}" type="submit">Devour it!</button>
                </form>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>


    <div class="devoured">

        <h3>Eaten Burgers:</h3>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                <p>ID: {{this.id}}</p>
                <p>Burger: {{this.burger_name}}</p>
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>

    <h2>Add A Burger:</h2>
    <form action="/burgers" method="POST">
        <textarea type="text" name="name"></textarea>

        <button type="submit">Submit</button>
    </form>
</div>